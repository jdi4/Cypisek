
@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>
<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <br />
    Enter id to authenticate: 
    <input type="number" id="authid" min="1" />
    <input type="button" id="auth" value="Authenticate" />
    <br />
    <input type="button" id="invoke" value="Invoke server send" />
    <input type="button" id="check" value="Check for new schedule" />
    <input type="hidden" id="displayname" />
    <ul id="discussion"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            //var chat = $.connection.hellotesthub;
            var chat = $.connection.contentHub;
            // Create a function that the hub can call back to display messages.
            chat.client.receiveData = function (dataFromServer) {
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + 'DANE OD SERVERA'
                    + '</strong>: ' + htmlEncode(dataFromServer) + '</li>');
            };
            chat.client.confirm = function (confirmed) {
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + 'SERWER'
                    + '</strong>: ' + 'tozsamosc potwierdzona = ' + htmlEncode(confirmed) + '</li>');
            };
            chat.client.test1 = function (dataFromServer) {
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + 'DANE LOOP'
                    + '</strong>: ' + htmlEncode(dataFromServer) + '</li>');
            };
            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#authid').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });      
            });
            $('#auth').click(function () {
                chat.server.poorAuthenticate($('#authid').val());
            });
            $('#invoke').click(function () {
                chat.server.invokeSending();
            });
            $('#check').click(function () {
                chat.server.checkSchedule();
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}


